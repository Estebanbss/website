---
import { Icon } from "astro-icon/components";

import { getLangFromUrl, useTranslations } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div id="footer" class="w-full min-h-80 flex justify-center">
     <div class="max-w-[1150px] w-full flex flex-col justify-end ">
          
          <section id="first" class="flex flex-col h-full border-t p-2 border-neutral-400 dark:border-neutral-700  text-[#1F2937] dark:text-white m-0 justify-end ">
               <div class="w-full min-h-[130px] flex flex-col gap-5 my-5">
                    <p class="sm:w-[50%] text-lg">{t("f.message")}</p>
                    <a href="mailto:juanesbs2003@hotmail.com" class="rounded-full border w-fit p-1 px-4 bg-white z-40 bg-opacity-40 hover:bg-black hover:bg-opacity-10">
                         juanesbs2003@hotmail.com
                    </a>
                    <h1 class="text-2xl md:text-4xl font-black">@Estebanbss</h1>
               </div>

          </section>

          <section id="final" class=" flex flex-row min-h-[145px] border-t  border-neutral-400 dark:border-neutral-700  text-[#1F2937] dark:text-white ">
               <div class="mr-auto relative flex w-full flex-col md:flex-row h-fit my-auto p-2">
                    <div class="flex w-full flex-row mt-12 md:mt-0 items-center">
                    <strong class="font-bold mr-1 text-sm md:text-xl">Esteban Barrera</strong> - <i-year class="ml-1 text-sm md:text-xl mr-auto"></i-year>
                    <span class="ml-auto mr-auto md:hidden">|</span>
                    <i-links class="ml-auto flex flex-row gap-2 w-fit">
                         <a href="https://www.linkedin.com/in/estebanbss/" target="_blank" class="flex flex-row items-center gap-1 hover:dark:text-white hover:dark:text-opacity-50 hover:text-opacity-50  group">
                              <span class="text-sm md:text-xl font-medium group-hover:opacity-50">LinkedIn</span>
                              <Icon name="mdi:arrow-top-right" class="dark:text-white text-sm group-hover:translate-x-[2px] group-hover:-translate-y-[2px]  transition-transform duration-200 opacity-50"/>
                         </a>
                         <a href="https://github.com/Estebanbss" target="_blank" class="flex flex-row items-center gap-1 hover:dark:text-white hover:dark:text-opacity-50 hover:text-opacity-50  group">
                              <span class="text-sm md:text-xl font-medium group-hover:opacity-50">Github</span>
                              <Icon name="mdi:arrow-top-right" class="dark:text-white text-sm group-hover:translate-x-[2px] group-hover:-translate-y-[2px]  transition-transform duration-200 opacity-50"/>
                         </a>
                    </i-links>
                    </div>
                    <Icon name="icon" class="text-5xl absolute left-[50%] translate-x-[-50%]" />  

               </div>
          </section>
     </div>
</div>



<script is:inline>
const currentYear = new Date().getFullYear();
document.querySelector('i-year').textContent = currentYear.toString();
</script>