---
import { Icon } from 'astro-icon/components'
---

<header class="min-h-[70px] px-6 py-4 bg-gradient-to-b from-gray-850 from-60%  justify-between flex w-full  ">

     <nav class="flex flex-col sm:flex-row gap-x-5 gap-y-3 sm:gap-y-0 text-base font-normal xl:max-w-[1120px] mx-auto w-full items-center">
          <a href="/" class="w-[36px] aspect-square rounded-full relative  overflow-hidden hover:bg-white hover:bg-opacity-5">
               <Icon name="icon" class="text-[53px] absolute mt-[6px] fill-red-500"/>
          </a>

          
          <div class="main mx-auto flex flex-row gap-x-5 text-sm md:text-base ">
               <a class="opacity-80 hover:opacity-100" href="/about">About</a>
               <a class="opacity-80 hover:opacity-100" href="/services">Projects</a>
               <a class="opacity-80 hover:opacity-100" href="/contact">Contact</a>
          </div>

          <div class="flex gap-2 items-center flex-row justify-center sm:border-l sm:border-white sm:border-opacity-50 sm:pl-6">
               <a href="/login"><Icon name="mdi:github" class="text-2xl text-white opacity-60 hover:opacity-100"/></a>
               <a href="/login"><Icon name="mdi:linkedin" class="text-2xl text-white opacity-60 hover:opacity-100 hover:text-blue-700"/></a>
          </div>
     </nav>

</header>